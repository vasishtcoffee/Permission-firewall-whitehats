{
  "manifest_version": 3,
  "name": "Permission Watcher",
  "version": "0.1",
  "description": "Real-time ML-powered permission monitoring",
  
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["content_injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
